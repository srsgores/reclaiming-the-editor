	Filename: layout.jade

	This file contains all layout logic, housing content for the Reclaiming the Editor slides

doctype html
html.no-js(lang = "en")
	head
		block head
			block header-meta
				meta(charset = "utf-8")
				meta(http-equiv = "X-UA-Compatible", content = "IE=edge,chrome=1")
				title Reclaiming the Editor
				meta(name = "description", content = "Understanding how to optimize the Wordpress content editor for a better blogging experience")
				meta(name = "viewport", content = "width=device-width, initial-scale=1")
			block header-scripts
				script(src = "bower_components/modernizr/modernizr.js")
			block header-styles
				link(rel = "stylesheet", href = "css/style.css")
	body(role="application")
		header(role="banner")
			block navigation
		.container
			main(role = "main")
				block content
		block footer
			footer(role = "contentinfo")
				small Copyright Reclaiming the Editor
					date(datetime = "Fri Jun 13 2014 17:52:36 GMT-0600 (Mountain Daylight Time)") Fri Jun 13 2014 17:52:36 GMT-0600 (Mountain Daylight Time)
		block scripts
			script(src = "bower_components/jquery/dist/jquery.min.js")
			script(src = "bower_components/jmpress/jmpress.js")
			script(src = "scripts/main.js")